modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "iana-etc", "libsndfile", "libxcrypt", "openssl", "pkg-config", "postgresql", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --worker-class eventlet --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41839
externalPort = 3002

[[ports]]
localPort = 42149
externalPort = 3001

[[ports]]
localPort = 46391
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["gunicorn", "--worker-class", "eventlet", "--bind", "0.0.0.0:5000", "--reuse-port", "main:app"]
healthCheck = { path = "/health", port = 5000 }
