externalPort = 80

[[ports]]
localPort = 46391
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--timeout", "300", "main:app"]
